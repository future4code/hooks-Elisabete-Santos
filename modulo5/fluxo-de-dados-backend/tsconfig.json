{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                           
    "rootDir": "./src",                                  
    "sourceMap": true,                             
    "outDir": "./build",                                   
    "removeComments":true,                                  "esModuleInterop": true,                           
